        <script src="/javascripts/jquery-2.1.1.js"></script>
        <script>
        function getImage() {
            $.ajax('/image')
            .done(function(data) {
                var resp = JSON.parse(data);
                $('#result').attr('src', resp.image);
                $('#result').attr('alt', resp.artist);
                $('span').text(' â€¢ ' + resp.artist);
                setTimeout(getImage, 12000);

            }).fail(function(a,b,c) {
                console.log(b,c);
            });
        }
        getImage();
        </script>
        <% include ga.ejs %>
